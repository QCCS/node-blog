{
    "name": "node-blog",
    "version": "1.0.0",
    "description": "Node搭建博客",
    "main": "src/index.js",
    "scripts": {
        "babelRun": "node_modules/.bin/babel-node src/index.js",
        "superdev": "supervisor dist/index.js",
        "dev": "node dist/index.js",
        "webpack": "node_modules/.bin/webpack",
        "webpackTest": "NODE_ENV=test node_modules/.bin/webpack",
        "devTest": "node dist/index.js",
        "webpackProd": "NODE_ENV=production node_modules/.bin/webpack",
        "test": "ava",
        "nyc": "nyc ava",
        "testReport": "nyc report --reporter=html"
    },
    "ava": {
        "files": [
            "test/route/*.test.js"
        ],
        "source": [
            "**/*.{js,jsx}",
            "!dist/**/*"
        ],
        "match": [
            "*"
        ],
        "failFast": true,
        "tap": true,
        "require": [
            "babel-register"
        ],
        "babel": "inherit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/QCCS/node-blog.git"
    },
    "keywords": [
        "node",
        "babel",
        "blog system",
        "koa2",
        "mysql",
        "orm",
        "jwt",
        "restful",
        "pm2",
        "sequelize",
        "swagger"
    ],
    "author": "qccs",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/QCCS/node-blog/issues"
    },
    "homepage": "https://github.com/QCCS/node-blog#readme",
    "devDependencies": {
        "ava": "^0.25.0",
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "chokidar": "^2.0.4",
        "copy-webpack-plugin": "^4.5.2",
        "eslint": "^5.7.0",
        "nyc": "^13.1.0",
        "request": "^2.88.0",
        "webpack": "^4.19.1",
        "webpack-cli": "^3.1.0"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "bluebird": "^3.5.3",
        "ejs": "^2.6.1",
        "jsonwebtoken": "^8.3.0",
        "koa": "^2.5.2",
        "koa-bodyparser": "^4.2.1",
        "koa-jwt": "^3.5.1",
        "koa-logger": "^3.2.0",
        "koa-router": "^7.4.0",
        "koa-static": "^5.0.0",
        "koa-views": "^6.1.4",
        "koa2-file-upload": "^0.1.25",
        "koa2-swagger-ui": "^2.9.8",
        "mysql": "^2.16.0",
        "mysql-backup-db": "^1.0.1",
        "mysql2": "^1.6.1",
        "redis": "^2.8.0",
        "sequelize": "^4.38.1",
        "sequelize-cli": "^4.1.1"
    }
}
